<!DOCTYPE html>
<html lang="zxx" class="no-js">

<head>
	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Favicon-->
	<link rel="shortcut icon" href="img/fav.png">
	<!-- Author Meta -->
	<meta name="author" content="CodePixar">
	<!-- Meta Description -->
	<meta name="description" content="">
	<!-- Meta Keyword -->
	<meta name="keywords" content="">
	<!-- meta character set -->
	<meta charset="UTF-8">
	<!-- Site Title -->
	<title>The Mobile Hour</title>
	<!--
		CSS	
		============================================= -->
	<link rel="stylesheet" href="css/linearicons.css">
	<link rel="stylesheet" href="css/font-awesome.min.css">
	<link rel="stylesheet" href="css/themify-icons.css">
	<link rel="stylesheet" href="css/bootstrap.css">
	<link rel="stylesheet" href="css/nice-select.css">
	<link rel="stylesheet" href="css/magnific-popup.css">
	<link rel="stylesheet" href="css/main.css">
</head>

<body>

    <script src="js/success.js"></script>
	<!-- Start Header Area -->
	<header class="header_area sticky-header">
		<div class="main_menu">
			<nav class="navbar navbar-expand-lg navbar-light main_box">
				<div class="container">
					<!-- Brand and toggle get grouped for better mobile display -->
					<a class="navbar-brand logo_h" href="/"><img src="img/logo.png" alt="company logo"></a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
					 aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
						<ul class="nav navbar-nav menu_nav ml-auto">
							<li class="nav-item active">
								<a class="nav-link" href="/">Home</a>
							</li>

							<li class="nav-item">
								<a href="shop" class="nav-link">Shop</a>
							</li>

							<li class="nav-item">
								<a href="login.html" class="nav-link">Login</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</div>
	</header>
	<!-- End Header Area -->

	<!-- start banner Area -->
	<section class="banner-area">
		<div class="container">
			<div class="row fullscreen align-items-center justify-content-start">
				<div class="col-lg-12">
					<div id="good-alert-pop" class="alert alert-warning alert-dismissible fade text-center mt-5" role="alert">
						<strong>Succesfully Logged In</strong>
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						  <span aria-hidden="true">&times;</span>
						</button>
					  </div>
					<div class="active-banner-slider owl-carousel">
						<!-- single-slide -->
						<div class="row single-slide align-items-center d-flex">
							<div class="col-lg-5 col-md-6">
								<div class="banner-content">
									<h5 class="display-4 font-weight-bold mb-4">The Latest Mobile Phones</h5>
									<p>View our products and discover our latest phones</p>
									<div class="add-bag d-flex align-items-center">
										<a class="primary-btn" href="/shop">Shop Now</a>
									</div>
								</div>
							</div>
							<div class="col-lg-7">
								<div class="banner-img">
									<img class="img-fluid ml-6" src="img/banner/banner-img2.png" alt="banner">
								</div>
							</div>
						</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End banner Area -->

	<!-- start features Area -->
	<section class="features-area section_gap">
		<div class="container">
			<div class="row features-inner">
				<!-- single features -->
				<div class="col-lg-3 col-md-6 col-sm-6">
					<div class="single-features">
						<div class="f-icon">
							<img src="img/features/f-icon1.png" alt="free deliver icon">
						</div>
						<h6>Free Delivery</h6>
						<p>Free Shipping on all orders</p>
					</div>
				</div>
				<!-- single features -->
				<div class="col-lg-3 col-md-6 col-sm-6">
					<div class="single-features">
						<div class="f-icon">
							<img src="img/features/f-icon2.png" alt="return icon">
						</div>
						<h6>Return Policy</h6>
						<p>Free Shipping on all orders</p>
					</div>
				</div>
				<!-- single features -->
				<div class="col-lg-3 col-md-6 col-sm-6">
					<div class="single-features">
						<div class="f-icon">
							<img src="img/features/f-icon3.png" alt="headset icon">
						</div>
						<h6>24/7 Support</h6>
						<p>Free Shipping on all orders</p>
					</div>
				</div>
				<!-- single features -->
				<div class="col-lg-3 col-md-6 col-sm-6">
					<div class="single-features">
						<div class="f-icon">
							<img src="img/features/f-icon4.png" alt="database icon">
						</div>
						<h6>Secure Payment</h6>
						<p>Free Shipping on all orders</p>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- end features Area -->

	<!-- Start category Area -->
	<section class="category-area">
		<div class="container mb-5">
			<div class="section-title text-center">
				<h1>Shop By Brand</h1>
			</div>
			<div class="row justify-content-center">
				<div class="col-lg-3 col-md-6">
					<div class="single-deal">
						<a href="/shop?brand=samsung">
							<div class="overlay"></div>
						</a>
						<img class="img-fluid" src="img/category/samsung-cat.png" alt="Samsung category image">
							<div class="deal-details">
								<h6 class="deal-title">Samsung</h6>
							</div>
						</a>
					</div>
				</div>
				<div class="col-lg-3 col-md-6">
					<div class="single-deal">
						<a href="/shop?brand=apple">
							<div class="overlay"></div>
						</a>
						<img class="img-fluid" src="img/category/apple-cat.png" alt="Apple category image">
							<div class="deal-details">
								<h6 class="deal-title">Apple</h6>
							</div>
						</a>
					</div>
				</div>
				<div class="col-lg-3 col-md-6">
					<div class="single-deal">
						<a href="/shop?brand=huawei">
							<div class="overlay"></div>
						</a>
						<img class="img-fluid" src="img/category/huawai-cat.png" alt="Huawei category image">
							<div class="deal-details">
								<h6 class="deal-title">Huawei</h6>
							</div>
						</a>
					</div>
				</div>
				<div class="col-lg-3 col-md-6">
					<div class="single-deal">
						<a href="/shop?brand=oneplus">
							<div class="overlay"></div>
						</a>
						<img class="img-fluid" src="img/category/oneplus-cat.png" alt="OnePlus category image">
							<div class="deal-details">
								<h6 class="deal-title">OnePlus</h6>
							</div>
						</a>
					</div>
				</div>
	</section>
	<!-- End category Area -->

	<!-- start product Area -->
	<section class="">
		<!-- single product slide -->
		<div class="single-product-slider">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-6 text-center">
						<div class="section-title">
							<h1>Latest Products</h1>
						</div>
					</div>
				</div>
				<div class="row">
					<% for(var i=0; i<items.length; i++) { %>
					<!-- single product -->
					<div class="col-lg-3 col-md-6 text-center">
						<div class="single-product">
							<a href="product/<%= items[i].product_id %>">
								<!-- if the product image is null use the default image -->
								<% if (items[i].product_image) { %>
								  <img class="img-fluid align-items-center" src="data:image/jpg;base64,<%= items[i].product_image.toString('base64') %>" alt="product image">
								<% } else { %>
								  <img class="img-fluid align-items-center" src="/img/defaultprodimg.png" alt="product image">
								<% } %>
							  </a>
							<div class="product-details">
								<h6><%= items[i].product_name %></h6>
								<div class="price">
									<h6>$<%= items[i].price %></h6>
								</div>
							</div>
						</div>
					</div>
					<% } %>
				</div>
			</div>
			<!-- start footer Area -->
			<footer class="footer-area">
				<div class="container">
					<div class="row justify-content-center align-items-center">
						<div class="col-lg-3  col-md-6 col-sm-6">
							<div class="single-footer-widget">
								<h6><a href="/">The Mobile Hour</a></h6>
								<p>
									The latest and greatest mobile phones, proudly based in Australia.
								</p>
							</div>
						</div>
						<div class="col-lg-3">
							<div class="single-footer-widget">
								<h6><a href="/shop">Shop</a></h6>
								<p>View our products</p>
								</div>
							</div>
						<div class="col-lg-3 col-md-6 col-sm-6">
							<div class="single-footer-widget">
								<h6><a href="/login.html">Login</a></h6>
								<p>Login to The Mobile Hour</p>
								</div>
							</div>
					<div class="col-lg-4 footer-bottom d-flex justify-content-center align-items-center flex-wrap">
						<p class="footer-text m-0">
						&copy; The Mobile Hour <script>document.write(new Date().getFullYear());</script>
						</p>
					</div>
			</footer>
			<!-- End footer Area -->
		<script src="js/vendor/jquery-2.2.4.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
			crossorigin="anonymous"></script>
		<script src="js/vendor/bootstrap.min.js"></script>
		<script src="js/jquery.nice-select.min.js"></script>
		<script src="js/jquery.sticky.js"></script>
		<script src="js/jquery.magnific-popup.min.js"></script>
		<script src="js/main.js"></script>
	</body>
</html>