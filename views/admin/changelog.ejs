                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table cellspacing="5" cellpadding="5">
                                        <tbody><tr>
                                            <td>Minimum date:</td>
                                            <td><input type="text" id="min" name="min"></td>
                                        </tr>
                                        <tr>
                                            <td>Maximum date:</td>
                                            <td><input type="text" id="max" name="max"></td>
                                        </tr>
                                    </tbody></table>
                                    <table id="changeTable" class="display nowrap" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Date Created</th>
                                                <th>Date Modified</th>
                                                <th>Name</th>
                                                <th>Product</th>
                                            </tr>
                                        </thead>
                                    <tbody>
                                        <% for(var i=0; i<items.length; i++) { %>
                                          <tr>
                                            <!-- get the date from the database -->
                                            <% const dateCreated = new Date(items[i].date_created); %>

                                            <!-- fix the timezone -->
                                            <% dateCreated.setDate(dateCreated.getDate() + 1); %>

                                            <!-- format the date into this format yyyy-mm-dd -->
                                            <% const formattedDateCreated = dateCreated.toISOString().slice(0, 10); %>
                    
                                            <td><%= formattedDateCreated %></td>
                                      
                                            <!-- get the date from the database -->
                                            <% const dateLastModified = new Date(items[i].date_last_modified); %>

                                            <!-- fix the timezone -->
                                            <% dateLastModified.setDate(dateLastModified.getDate() + 1); %>
                                            
                                            <!-- format the date into this format yyyy-mm-dd -->
                                            <% const formattedDateLastModified = dateLastModified.toISOString().slice(0, 10); %>

                                            <td><%= formattedDateLastModified %></td>
                                      
                                            <!-- get the row that has the same user_id in the changelog table so we can get the name of the admin that made the change -->
                                            <% const adminRow = admin.find(row => row.user_id === items[i].user_id); %>
                                            <td><%= adminRow.firstname %> <%= adminRow.lastname %></td>
                                      
                                            <!-- get the row that has the same product_id in the changelog table so we can get the changed product name -->
                                            <% const productRow = product.find(row => row.product_id === items[i].product_id); %>
                                            <td><%= productRow.product_name %></td>
                                          </tr>
                                        <% } %>
                                      </tbody>  
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
